{
  "name": "Grimoire.js Devtool",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "The inspector of Grimoire.js help us develop WebGL stuff as front-end web.",
  "devtools_page": "view/init.html",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts":[{
    "matches":["<all_urls>"],
    "run_at" :"document_start",
    "js":["lib/inject.js"]
  }],
  "web_accessible_resources":[
    "lib/embed.js"
  ],
  "background":{
    "scripts":["lib/background.js"]
  }
}
